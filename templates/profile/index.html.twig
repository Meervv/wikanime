{% extends 'base.html.twig' %}

{% block title %}Mon profil{% endblock %}

{% block body %}
<link rel="stylesheet" href="assets/profil.css">

<div class="presentation">
    <p>Bienvenue</p>
    <p><span class="user">{{ user.pseudo }} </span>!</p>
</div>

{# -------------------------Image de profil----------------------------- #}

<div class="img-profile">
